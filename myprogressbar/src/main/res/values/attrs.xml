<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyProgressBar">
        <!--圆环的线条宽度-->
        <attr name="STROKWITH" format="dimension"/>
        <!--背景色-->
        <attr name="BACKGROUND_COLOR" format="string"/>
        <!--前景色-->
        <attr name="FOREGROUND_COLOR" format="string"/>
        <!--绘制时间间隔-->
        <attr name="INTERVAL" format="string"/>
        <!--字体大小-->
        <attr name="TEXT_SIZE" format="dimension"/>
        <!--字体颜色-->
        <attr name="TEXT_COLOR" format="string"/>
        <!--标记是否显示文字-->
        <attr name="IS_SHOW_TEXT" format="boolean"/>
        <attr name="Stroke_Cap" format="enum">
            <enum name="BUTT" value="0" />
            <enum name="ROUND" value="1" />
            <enum name="SQUARE" value="2" />
        </attr>
    </declare-styleable>

</resources>